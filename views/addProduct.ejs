            <hr>
            <form action="/addProduct" method="POST"  enctype="multipart/form-data">

              <!-- Email input -->
              
              <div class="form-outline mb-4">
                <label class="form-label" for="form3Example3">Product Name</label>
                <input type="text" id="form3Example3" class="form-control form-control-lg" name="productname"
                  placeholder="Enter product Name" required />
                
              </div>

              <div class="form-outline mb-3">
                <label class="form-label" for="form3Example3">Image  </label>
                <input type="file" id="image" name="image">
                
              </div>

               <div class="form-outline mb-4">
                <label class="form-label" for="form3Example3">Details</label>
                 <textarea id="form3Example3" class="form-control form-control-lg" name="detail"
                  placeholder="Enter details" required  rows="4" cols="50"></textarea>
                <!-- <input type="textarea" id="form3Example3" class="form-control form-control-lg" name="detail"
                  placeholder="Enter details" required /> -->
                
              </div>

               <div class="form-outline mb-4">
                <label class="form-label" for="form3Example3">Price Details</label>
                <input type="text" id="form3Example3" class="form-control form-control-lg" name="priceDetails"
                  placeholder="Enter Price Details In $ Dollors (Range for selling)" required />
                
              </div>

             
               <div class="form-outline mb-4">
      <label for="category" class="block text-gray-700 font-bold mb-2">Select Category:</label>
      <select id="category" name="category" class="border border-gray-400 p-2 w-full" required>
        <option value="">Select category</option>
        <option value="electronics">Electronic</option>
        <option value="metal">Metal</option>
        <option value="agriculture">Agriculture</option>
        <option value="chemical">Chemical</option>
        <option value="electrical">Electrical</option>
        <option value="software">Software</option>
        <option value="textile">Textile</option>
        <option value="household">Household</option>
        <option value="automobile">Automobile</option>
        <option value="stationary items">Stationary Items</option>
        <option value="miscellaneous">Miscellaneous</option>
        
      </select>
    </div>

              <div class="input__box">
               <span class="details">Address</span>
                <input type="text" name="address" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a address" required />
              </div>

                 <div class="input_box">
      <span class="details">Region</span>
      <div style="" name="region">
        <select onchange="set_country(this,country,city_state)" size="1" name="region" class="" style="width: 300px; height: 45px;">
          <option value="" selected="selected">SELECT REGION</option>
          <script type="text/javascript">
            setRegions(this);
          </script>
        </select>
      </div>
    </div>
                       <div class="form-outline mb-4">
                 Country&raquo; <select name="country" size="1" disabled onchange="set_city_state(this,city_state)">SELECT COUNTRY</select>
                 
              </div>
                       <div class="form-outline mb-4">
                  City/State&raquo; <select name="city_state" size="1" disabled onchange="print_city_state(country,this)">SELECT CITY/STATE</select>
                </div>
              <!-- pincode -->
              <div class="input__box">
               <span class="details">Pincode</span>
                <input type="text" name="pincode" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a valid pincode" required />
              </div>
              

              
              <div class="text-center text-lg-start mt-4 pt-2">
                <button type="submit" class="btn btn-lg"
                  style="padding-left: 2.5rem; padding-right: 2.5rem;background-color: #feb543;">Add</button>
              </div>
            </form>
