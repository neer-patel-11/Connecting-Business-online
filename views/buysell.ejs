  <section class="vh-100 text-left">
    <div class="container-fluid h-custom" >
<div class="row" >
  <div class="main_box">
                <div class="container my-4">
      <div class="title">Product Information</div>
         <hr>
             <form action="/buysell" method="POST">

              <!-- Email input -->
               <div class="user__details">
                <div class="input__box">
               <span class="details">Product Name</span>
                <input type="text" id="form3Example3" class="form-control form-control-lg" name="productname"
                  placeholder="Enter a product name" required />
                
              </div>
              
             
             <div class="input__box">
               <span class="details">Details</span>
               <textarea id="form3Example3" class="form-control form-control-lg" name="detail"
                  placeholder="Enter details" required  rows="3" cols="25"></textarea>
                
              </div>

               <div class="input__box">
      <label for="category" class="block text-gray-700 font-bold mb-2">Category:</label>
      <select id="category" name="category" class="border border-gray-400 p-2 w-full" required>
         <option value="">Select category</option>
        <option value="electronics">Electronic</option>
        <option value="metal">Metal</option>
        <option value="agriculture">Agriculture</option>
        <option value="chemical">Chemical</option>
        <option value="electrical">Electrical</option>
        <option value="software">Software</option>
        <option value="textile">Textile</option>
        <option value="household">Household</option>
        <option value="automobile">Automobile</option>
        <option value="stationary items">Stationary Items</option>
        <option value="miscellaneous">Miscellaneous</option>
        
      </select>
    </div>
              
            <div class="input__box">  
                <span class="details">Quantity</span>
                <input type="text" name="quantity" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a quantity(give unit)" required />
              </div>

              
            <div class="input__box">
                <span class="details">Name</span>
                <input type="text" name="contactname" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a seller name" required />
              </div>

              
            <div class="input__box">
               <span class="details">Contact Email</span>
                <input type="email" name="email" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a email" required />
              </div>


              
            <div class="input__box">
                <span class="details">Contact Number</span>
                <input type="tel" name="contactnumber" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a phone number" required />
              </div>

              
             <div class="input__box">
               <span class="details">Address</span>
                <input type="text" name="address" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a address" required />
              </div>

                 <div class="input_box">
      <span class="details">Region</span>
      <div style="" name="region">
        <select onchange="set_country(this,country,city_state)" size="1" name="region" class="" style="width: 300px; height: 45px;">
          <option value="" selected="selected">SELECT REGION</option>
          <script type="text/javascript">
            setRegions(this);
          </script>
        </select>
      </div>
    </div>
                       <div class="form-outline mb-4">
                 Country&raquo; <select name="country" size="1" disabled onchange="set_city_state(this,city_state)">SELECT COUNTRY</select>
                 
              </div>
                       <div class="form-outline mb-4">
                  City/State&raquo; <select name="city_state" size="1" disabled onchange="print_city_state(country,this)">SELECT CITY/STATE</select>
                </div>
              <!-- pincode -->
              <div class="input__box">
               <span class="details">Pincode</span>
                <input type="text" name="pincode" id="form3Example3" class="form-control form-control-lg"
                  placeholder="Enter a valid pincode" required />
              </div>

              
           
              
              
